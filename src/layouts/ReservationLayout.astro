---
import Layout from './Layout.astro';
import ReservationStepper from '../components/ReservationStepper.astro';

interface Props {
  title: string;
  currentStep: number;
}

const { title, currentStep } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-50">
    <div class="max-w-4xl mx-auto pt-4 sm:pt-8 pb-10 sm:pb-16 px-3 sm:px-6 lg:px-8">
      <h1 class="text-2xl sm:text-3xl font-extrabold text-center text-gray-900 mb-4 sm:mb-8">
        Système de Réservation
      </h1>
      
      <ReservationStepper currentStep={currentStep} />
      
      <div class="mt-4 sm:mt-8 bg-white p-4 sm:p-6 rounded-lg shadow-md">
        <slot />
      </div>
    </div>
  </div>
</Layout>