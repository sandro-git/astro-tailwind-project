---
import Layout from "./Layout.astro";
import ReservationStepper from "../components/ReservationStepper.astro";

interface Props {
  title: string;
  currentStep: number;
}

const { title, currentStep } = Astro.props;
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-900">
    <div
      class="grid grid-cols-12 pt-4 sm:pt-8 pb-10 sm:pb-16 px-3 sm:px-6 lg:px-8"
    >
      <h1
        class="col-span-12 md:col-span-4 md:col-start-5 text-2xl sm:text-3xl font-extrabold text-center text-white bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent mb-4 sm:mb-8"
      >
        Système de Réservation
      </h1>

      <ReservationStepper currentStep={currentStep} />

      <div
        class="col-start-1 col-span-12 md:col-start-3 md:col-span-8 mt-4 sm:mt-8 bg-gray-800 border border-gray-700 p-4 sm:p-6 rounded-lg shadow-lg"
      >
        <slot />
      </div>
    </div>
  </div>
</Layout>
