  testResendConfiguration,
  sendConfirmationEmail,
} from "../../lib/emailService";

let testResult = null;
let emailResult = null;
let error = null;

// Test de configuration au chargement de la page
try {
  testResult = await testResendConfiguration();
  console.log("Test de configuration Resend:", testResult);
} catch (e) {
  error = e instanceof Error ? e.message : "Erreur inconnue";
  console.error("Erreur lors du test de configuration:", e);
}

// Si le formulaire de test d'email est soumis
