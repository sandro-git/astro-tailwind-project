        duration: "60",
        dateTime: new Date(),
        totalPrice: "58.00",
      };

      emailResult = await sendConfirmationEmail(testData);
      console.log("R√©sultat du test d'email:", emailResult);
    }
  } catch (e) {
    error = e instanceof Error ? e.message : "Erreur lors de l'envoi de test";
    console.error("Erreur lors de l'envoi de test:", e);
  }
}
