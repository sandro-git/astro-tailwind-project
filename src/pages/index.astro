---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Système de Réservation VR">
  <div
    class="flex flex-col items-center justify-center min-h-screen py-12 bg-gray-900"
  >
    <h1 class="text-4xl text-center font-bold text-blue-400">
      Système de Réservation VR
    </h1>
    <p class="mt-4 text-lg text-center text-gray-300">
      Réservez facilement votre expérience de réalité virtuelle
    </p>

    <div class="mt-8">
      <a
        href="/reservation"
        class="px-8 py-3 bg-blue-600 text-white font-medium rounded-lg shadow-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors"
      >
        Réserver maintenant
      </a>
    </div>
  </div>
</Layout>
